<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AnimationPreview">  
        <item name="android:windowEnterAnimation">@anim/push_top_in</item>  
        <item name="android:windowExitAnimation">@anim/push_top_out</item>  
    </style>
    
    <style name="title_relayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">#ffffff</item>
    </style>
    <style name="title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="back_btn">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/back</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    
    <style name="back_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:text">@string/back</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">#00AFEF</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
